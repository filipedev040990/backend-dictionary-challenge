generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Request {
  id        String   @id
  requestId String
  method    String
  route     String
  input     String   @db.Text
  output    String   @db.Text
  status    Int
  createdAt DateTime
  updatedAt DateTime

  @@map("requests")
}

model Dictionary {
  id        String   @id
  word      String
  createdAt DateTime

  @@map("dictionary")
}

model DictionaryImports {
  id        String   @id
  status    String
  createdAt DateTime
  updatedAt DateTime

  @@map("dictionary_imports")
}

model User {
  id                 String               @id
  name               String
  username           String               @unique
  password           String               @db.Text
  createdAt          DateTime
  updatedAt          DateTime
  UserSearchHistory  UserSearchHistory[]
  UserFavoritesWords UserFavoritesWords[]

  @@map("users")
}

model Token {
  id        String   @id
  token     String   @db.Text
  createdAt DateTime

  @@map("tokens")
}

model UserSearchHistory {
  id      String   @id
  user    User     @relation(fields: [userId], references: [id])
  userId  String
  word    String
  addedAt DateTime

  @@map("user_search_history")
}

model UserFavoritesWords {
  id        String   @id
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  word      String
  createdAt DateTime

  @@map("user_favorites_words")
}
